#
# Warning flags
#
WFLAGS			:= -g -Wall
WFLAGS			+= -Wunknown-pragmas
WFLAGS			+= -Wimplicit-int
WFLAGS			+= -Wtrigraphs

#
# compiler
#
GCC			:= gcc
AR			:= ar
RANLIB			:= ranlib
CP			:= /bin/cp.exe
RM			:= /bin/rm.exe

#
# AR flags
#
AFLAGS			:= -rcSv



LFLAGS	:= -Wl,--allow-multiple-definition
LFLAGS	+= -Wl,--enable-stdcall-fixup
LIBS	:= -lpthread -lwsock32 -lws2_32

.SUFFIXES:      .c .o

.c.o:	$<
	$(GCC) -O3 -c $(CFLAGS) $<
